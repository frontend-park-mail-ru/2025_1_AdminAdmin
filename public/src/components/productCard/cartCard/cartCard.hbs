<div class="cart-card" id="cart-card-{{id}}">
    <img
            class="cart-card__product_icon"
            src="http://doordashers.ru/images_restaurant/{{image_url}}"
            alt="{{name}}"
            onerror="this.onerror=null; this.src='/src/assets/default_product.jpg';"
    />
    <div class="cart-card__content">
        <span class="cart-card__content__name">{{name}}</span>
        <div class="cart-card__content__bottom">
            <span class="cart-card__content__total_price">{{total_price}}</span>
            <span> ₽</span>
            <span>•</span>
            <span class="cart-card__content__weight">{{weight}} г</span>
        </div>
        <div class="cart-card__content__quantity-controls-wrapper"></div>
    </div>
    <img class="cart-card__bin_icon" src="/src/assets/close.png" alt="bin icon" />
</div>