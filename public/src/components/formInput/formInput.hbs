<div class="form__input" id="{{id}}">
    <div class="form__input-head">
        <div class="form__input__text">{{label}}</div>
        <div class="form__input__error" id="{{id}}-error"></div>
    </div>
    <div class="form__input__input-container">
        <input
                type="{{type}}"
                name="{{name}}"
            {{#unless movePlaceholderOnInput}} placeholder="{{placeholder}}" {{/unless}}
            {{#if required}}required{{/if}}
                id="{{id}}-input"
                autocomplete="{{autocomplete}}"
            {{#if value}} value="{{value}}" {{/if}}
        >
        {{#if movePlaceholderOnInput}}
            <label for="{{id}}-input" class="form__input__input-label">{{placeholder}}</label>
        {{/if}}
        <span class="form__input__eye-icon" id="eye-icon">
            <img src="/src/assets/hide.png" alt="eye icon" class="eye-icon">
        </span>
    </div>
</div>
